{
    "name": "docs-starter-kit",
    "description": "Docs Starter Kit",
    "private": true,
    "type": "module",
    "scripts": {
        "migrate": "php artisan migrate:fresh --seed && php artisan optimize:clear",
        "build": "php artisan optimize:clear && php artisan view:clear && npm run format && vite build && vite build --ssr",
        "dev": "php artisan optimize:clear && npx concurrently -c \"#c4b5fd,#fb7185\" \"php artisan schedule:work\" \"vite\" --names=schedule,vite",
        "update": "npm update && composer update && npm run build",
        "format": "prettier --write resources/",
        "format:check": "prettier --check resources/",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.2",
        "@inertiajs/vue3": "^2.3.4",
        "@laravel/vite-plugin-wayfinder": "^0.1.7",
        "@tailwindcss/vite": "^4.1.18",
        "@tiptap/extension-code-block-lowlight": "^3.14.0",
        "@tiptap/extension-image": "^3.14.0",
        "@tiptap/extension-link": "^3.14.0",
        "@tiptap/extension-underline": "^3.14.0",
        "@tiptap/pm": "^3.14.0",
        "@tiptap/starter-kit": "^3.14.0",
        "@tiptap/vue-3": "^3.14.0",
        "@types/node": "^25.0.3",
        "@types/sortablejs": "^1.15.9",
        "@vitejs/plugin-vue": "^6.0.3",
        "@vue/eslint-config-typescript": "^14.6.0",
        "@vueuse/core": "^14.1.0",
        "apexcharts": "^5.3.6",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "concurrently": "^9.2.1",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-vue": "^10.6.2",
        "laravel-vite-plugin": "^2.0.1",
        "lucide-vue-next": "^0.562.0",
        "prettier": "^3.7.4",
        "prettier-plugin-organize-imports": "^4.3.0",
        "prettier-plugin-tailwindcss": "^0.7.2",
        "reka-ui": "^2.7.0",
        "tailwind-merge": "^3.4.0",
        "tailwindcss": "^4.1.1",
        "tw-animate-css": "^1.4.0",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.51.0",
        "ua-parser-js": "^2.0.7",
        "vite": "^7.3.0",
        "vue": "^3.5.26",
        "vue-sonner": "^2.0.9",
        "vue-tsc": "^3.2.1",
        "vue3-apexcharts": "^1.10.0"
    },
    "dependencies": {
        "@headlessui/vue": "^1.7.23",
        "@vue/eslint-config-prettier": "^10.2.0",
        "@vueuse/integrations": "^14.1.0",
        "highlight.js": "^11.11.1",
        "lowlight": "^3.3.0",
        "sortablejs": "^1.15.6"
    }
}
